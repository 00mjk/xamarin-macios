<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <_PlatformName>iOS</_PlatformName>
  </PropertyGroup>

  <Import Project="../xamarin.legacy.sdk.lite.csproj" />

  <ItemGroup>
    <!-- Remove default Xamarin.iOS.Sdk.props as we'll be using the Lite version -->
    <Content Remove="$(_fullSdkPackagePath)\targets\Xamarin.iOS.Legacy.Sdk.props"/>
    <!-- The Lite SDK replaces the full Sdk.props -->
    <Content Update="$(_fullSdkPackagePath)\targets\Xamarin.iOS.Legacy.Sdk.Lite.props">
      <PackagePath>targets\Xamarin.iOS.Legacy.Sdk.props</PackagePath>
    </Content>
  </ItemGroup>

</Project>
